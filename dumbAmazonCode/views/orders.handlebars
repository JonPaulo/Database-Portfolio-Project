<div class="container" id='containerbg'>
	<br>

	<h1>Orders Database</h1>

	<!-- search bar -->
	<form class="" action="/orders/search" method="get">
		<div class="form-row">
			<div class="form-group col-md-7">
				<input name="search" class="form-control" type="text" placeholder="Search" aria-label="Search">
			</div>
			<div class="form-group col-md-3">
				<select class="form-control" name="filter">
					<option value="user_id">User ID</option>
					<option value="payment_id">Payment ID</option>
					<option value="order_date">Order Date</option>
					<option value="order_total">Order Total</option>
				</select>
			</div>
			<div class="form-group col-md-2">
				<button type="submit" class="btn btn-primary btn-block">Search</button>
			</div>
		</div>
	</form>

	<!-- reset button -->
	<form action="/orders" method="get">
		<button type="submit" class="btn btn-danger btn-block">Reset Table Display</button>
	</form>
	<br>

	<!-- add item -->
	<button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#addorder" aria-expanded="false" aria-controls="addorder">
		Add Order
	</button><br />
	<div class="collapse" id="addorder">
		<form action="/orders/add" method="post">
			<div class="form-group">
				<label for="newUserID">User ID</label>
				<select class="form-control" name="newUserID">
					{{#each account}}
					<option value={{id}}>{{id}} - {{username}}</option>
					{{/each}}
				</select>
			</div>
			<div class="form-group">
				<label for="newPaymentID">Payment ID</label>
				<select class="form-control" name="newPaymentID">
					{{#each payment_account}}
					<option value={{id}}>{{id}} - by {{username}}</option>
					{{/each}}
				</select>
			</div>
			<!--<div class="form-group">
				<label for="newTotal">Order Total</label>
				<input type="number" min="0.00" step="0.01" class="form-control" name="newTotal" placeholder="Order Total">
			</div>-->
			<div class="form-group">
				<label for="newDate">Order Date</label>
				<input type="date" class="form-control" name="newDate" placeholder="newDate">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>

	<!-- Display Order Data -->
	<table class='table'>
		<thead>
			<tr>
				<th>Order Number</th>
				<th>Username</th>
				<th>Payment ID</th>
				<th>Order Total</th>
				<th>Order Date</th>
				<th>Order Detail</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			{{#each orders_account}}
			<tr>
				<td>
					{{id}}
				</td>
				<td>
					{{username}}
				</td>
				<td>
					{{payment_id}}
				</td>
				<td>
					{{order_total}}
				</td>
				<td>
					{{order_date}}
				</td>
				<td>
					<form action="/orders_product" method="get">
						<input type="hidden" name="id" value="{{id}}">
						<button type="submit" class="btn btn-dark">View</button>
					</form>
				</td>
				<td>
					<button type="button" class="btn btn-dark" data-toggle="modal" data-target="#modalUpdate{{id}}">Update</button>
				</td>
				<td>
					<form action="/orders/delete" method="post">
						<input type="hidden" name="id" value="{{id}}">
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</td>
			</tr>
			{{/each}}
		</tbody>
	</table>


	<!-- Edit Pop Up (called Modal) -->
	{{#each orders_account}}

	<div class="row d-flex justify-content-center modalWrapper">
		<div class="modal fade modalUpdateClass" id="modalUpdate{{id}}" tabindex="-1" role="dialog" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<form action="/orders/update" method="post">
						<input type="hidden" name="updateID" value="{{id}}">
						<div class="modal-header text-center">
							<h4 class="modal-title w-100 font-weight-bold ml-5">Update Entry</h4>
							<button type="button" class="close text-secondary" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body mx-3">

							<div class="md-form mb-1">
								<label data-error="wrong" data-success="right" for="updateOrderDate">Order Date</label>
								<input type="date" name="updateOrderDate" class="form-control validate" value="{{order_date}}" required>
							</div>

							<!--<div class="md-form mb-1">
								<label data-error="wrong" data-success="right" for="updateOrderDate">Order Total</label>
								<input type="number" name="updateOrderTotal" class="form-control validate" value="{{order_total}}" required>
							</div>-->

							<div class="form-row">
								<div class="col">
									<label data-error="wrong" data-success="right" for="updateUserID">User ID</label>
									<select class="form-control" name="updateUserID">
										{{#each ../account}}
										<option value={{id}}>{{id}} - {{username}}</option>
										{{/each}}
									</select>
								</div>
							</div>

							<div class="form-row">
								<div class="col">
									<label data-error="wrong" data-success="right" for="updatePaymentID">Payment ID</label>
									<select class="form-control" name="updatePaymentID">
										{{#each ../payment_account}}
										<option value={{id}}>{{user_id}}</option>
										{{/each}}
									</select>
								</div>
							</div>
							<div class="modal-footer d-flex justify-content-center updateInsideWrapper">
								<button type="submit" class="btn btn-secondary btn-block updateInside">
									Confirm Changes
									<i class="fas fa-paper-plane-o ml-1"></i>
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>

	</div>
	{{/each}}

</div>
