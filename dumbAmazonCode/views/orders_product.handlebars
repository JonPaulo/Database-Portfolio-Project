<div class="container" id='containerbg'>
	<br>
	<h1>orders_product Database</h1><hr>

	<table>
		<body>
			<form class="" action="index.html" method="post">
				<tr>
					<input class="form-control" type="text" placeholder="Search Product Name" aria-label="Search">
				</tr>
				<tr></tr>
			</form>
		</body>
	</table>

	<br>

	<!-- add item -->
	<button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#addorders_product" aria-expanded="false" aria-controls="addorders_product">
		Add orders_product
	</button><br />
	<div class="collapse" id="addorder">
		<form action="/orders/add" method="post">
			<div class="form-group">
				<label for="newProductID">Product ID</label>
				<select class="form-control" name="newProductID">
					{{#each orders_product}}
					<option value={{id}}>{{id}} - {{name}}</option>
					{{/each}}
				</select>
			</div>
			<div class="form-group">
				<label for="newQuantity">Quantity</label>
				<input type="number" min="0" step="1" class="form-control" name="newQuantity" placeholder="Quantity">
			</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
	<br>

	<!-- display item -->
	<table class='table'>
		<thead>
			<tr>
				<th>Product ID</th>
				<th>Product Name</th>
				<th>Quantity</th>
				<th>Price</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			{{#each orders_product}}
			<tr>
				<td>
					{{id}}
				</td>
				<td>
					{{name}}
				</td>
				<td>
					{{quantity}}
				</td>
				<td>
					{{price}}
				</td>
				<td>
					<button type="button" class="btn btn-dark" data-toggle="modal" data-target="#modalUpdate{{id}}">Update</button>
				</td>
				<td>
					<form action="categories/delete" method="post">
						<input type="hidden" name="deleteID" value="{{id}}">
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</td>
			</tr>
			{{/each}}
		</tbody>
	</table>

	<!-- Update Pop Up (called Modal) -->
	{{#each orders_product}}

	<div class="row d-flex justify-content-center modalWrapper">
		<div class="modal fade modalUpdateClass" id="modalUpdate{{id}}" tabindex="-1" role="dialog" aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<form action="/categories/update" method="post">
						<input type="hidden" name="updateID" value="{{id}}">
						<div class="modal-header text-center">
							<h4 class="modal-title w-100 font-weight-bold ml-5">Update Entry</h4>
							<button type="button" class="close text-secondary" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body mx-3">
							<div class="md-form mb-1">
								<label data-error="wrong" data-success="right" for="updateProductID">Product ID</label>
								<select class="form-control" name="updateProductID">
									{{#each product}}
									<option value={{id}}>{{id}} - {{name}}</option>
									{{/each}}
								</select>
							</div>

						</div>
						<div class="modal-footer d-flex justify-content-center updateInsideWrapper">
							<button type="submit" class="btn btn-secondary btn-block updateInside">
								Confirm Changes
								<i class="fas fa-paper-plane-o ml-1"></i>
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>

	</div>
	{{/each}}

</div>
